@model ValueTuple<Hotel, List<Review>>

@{
    Layout = "_LayoutUser";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>Hotel</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item1.Name)
            </dt>
            <dd class="col-sm-10">
                test
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item1.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Item1.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item1.RoomNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Item1.RoomNumber)
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Item1.RoomNumber)
            </dd>


            @foreach (var item in Model.Item2)
            {

                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">
                            @item.Comment
                        </h5>
                        @item.isPositive()

                    </div>
                </div>
            }
        </dl>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>
